      marginBottom: "8px",
    },
    savings: {
      color: "#128807",
      fontSize: "14px",
      fontWeight: "700",
      display: "flex",
      alignItems: "center",
      width: "100%",
      marginBottom: "15px",
    },
    settlement: {
      backgroundColor: "#128807",
      color: "white",
      padding: "4px 8px",
      borderRadius: "6px",
      fontSize: "12px",
      fontWeight: "500",
      marginLeft: "auto",
      marginTop: "-60px",
      display: "flex",
      alignItems: "center",
      gap: "4px",
    },
    whiteEmoji: {
      filter: "brightness(0) invert(1)",
    },
    comparisonBox: {
      display: "flex",
      gap: "12px",
      marginTop: "24px",
      marginBottom: "16px",
      borderTop: "1px solid #E5E7EB",
      paddingTop: "16px",
    },
    comparisonItem: {
      flex: 1,
      padding: "12px",
      backgroundColor: "#F8FAFC",
      borderRadius: "8px",
      position: "relative",
    },
    serviceLogoGroup: {
      display: "flex",
      alignItems: "center",
      gap: "4px",
      marginBottom: "16px",
      position: "absolute",
      top: "8px",
      left: "8px",
    },
    serviceLogo: {
      height: "20px",
      objectFit: "contain",
    },
    serviceTitle: {
      fontSize: "12px",
      color: "#1A1A1A",
      fontWeight: "600",
    },
    comparisonAmount: {
      fontSize: "16px",
      fontWeight: "600",
      color: "#1A1A1A",
      marginBottom: "4px",
      marginTop: "32px",
    },
    difference: {
      color: "#DC2626",
      fontSize: "12px",
      fontWeight: "600",
    },
    savingsNote: {
      backgroundColor: "transparent",
      padding: "0",
      fontSize: "14px",
      color: "#216AFB",
      display: "flex",
      alignItems: "center",
      gap: "8px",
    },
    savingsIcon: {
      fontSize: "16px",
    },
    input: {
      border: 'none',
      fontSize: "20px",
      fontWeight: "600",
      color: "#1A1A1A",
      width: "100%",
      outline: 'none',
      backgroundColor: 'transparent',
      textAlign: 'right' as const,
      paddingRight: '8px',
      overflow: 'visible'
    },
    rateContainer: {
      display: "flex",
      alignItems: "center",
      justifyContent: "space-between",
      marginBottom: "0",
    },
    paypalLogo: {
      width: "50px",
      height: "auto",
      objectFit: "contain",
      position: "absolute",
      top: "8px",
      left: "8px",
    },
    settlementText: {
      display: 'flex',
      alignItems: 'center',
      gap: '4px',
      fontSize: '14px',
      color: '#666666',
      backgroundColor: '#F5F5F5',
      padding: '4px 8px',
      borderRadius: '4px',
      width: 'fit-content',
    },
  };

  return (
    <div style={styles.container}>
      <div style={styles.clientSends}>
        <div style={styles.amountBox}>
          <div style={{ color: "#666", fontSize: "14px" }}>Client sends</div>
          <div style={styles.amountRow}>
            <div style={styles.currencyGroup}>
              <img src="https://flagcdn.com/w40/us.png" alt="USD flag" style={styles.flag} />
              <span style={styles.currencyText}>USD</span>
            </div>
            <div style={styles.amount}>
              <input
                type="text"
                value={`$ ${usdAmount.toLocaleString()}`}
                onChange={handleAmountChange}
                style={styles.input}
              />
            </div>
          </div>
        </div>
      </div>

      <div style={styles.exchangeRate}>
        <div style={styles.rateRow}>
          <div style={styles.horizontalLine} />
          <div style={{
            display:"flex",
            flexDirection:'column',
            justifyContent:"center",
            alignItems:'center',
            margin:'0px 10px'
          }} >

          <div style={styles.fxRate}>FX INR {exchangeRate}</div>
          <span style={styles.liveTag}>
          <div style={styles.blueDotSmall} />
          Live Fx, Zero markup
        </span>
          </div>
          <div style={styles.horizontalLine} />
        </div>
        
      </div>

      <div style={styles.mainComparisonBox}>
        <div style={styles.receiveTitle}>You receive in INR</div>
        <img 
          src="https://d2pldvnlcmq63z.cloudfront.net/FE-Asset/Bundle%20Asset/InfinityNameWithLogo.png" 
          alt="Infinity" 
          style={styles.infinityLogo} 
        />
        <div style={styles.receiveAmount}>₹ {infinityAmount}</div>
        <div style={styles.savings}>
          Get ₹{bankSavings} more than Bank
          <span style={styles.settlement}>
            <span style={styles.whiteEmoji}>⚡</span> 1 day settlement
          </span>
        </div>

        <div style={styles.comparisonBox}>
          <div style={styles.comparisonItem}>
            <div style={styles.serviceLogoGroup}>
              <img 
                src="https://d2pldvnlcmq63z.cloudfront.net/FE-Asset/Bundle%20Asset/bankLogo.svg" 
                alt="Bank" 
                style={styles.serviceLogo} 
              />
              <div style={styles.serviceTitle}>Bank</div>
            </div>
            <div style={styles.comparisonAmount}>₹ {bankAmount}</div>
            <div style={styles.difference}>-₹{bankSavings}</div>
          </div>
          <div style={styles.comparisonItem}>
            <img 
              src="https://d2pldvnlcmq63z.cloudfront.net/FE-Asset/Bundle%20Asset/paypalLogo.svg" 
              alt="PayPal" 
              style={styles.paypalLogo} 
            />
            <div style={styles.comparisonAmount}>₹ {paypalAmount}</div>
            <div style={styles.difference}>-₹{paypalSavings}</div>
          </div>
        </div>

        <div style={styles.savingsNote}>
        <img
                        src="https://d2pldvnlcmq63z.cloudfront.net/FE-Asset/Bundle%20Asset/fluent_sparkle-16-filled.svg"
                        alt="sparkle"
                        style={{ width: "16px", height: "16px" }}
                    />
          Save ₹{annualSavings} annually with Infinity compared to banks
        </div>
      </div>
    </div>
  );
} 

